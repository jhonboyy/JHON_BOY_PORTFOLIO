---
const { 
    worksButtonClass, 
    aboutButtonClass, 
    contactButtonClass, 
    instagramButtonClass, 
    worksLinkTextClass, 
    aboutLinkTextClass,
    contactLinkTextClass,
    instagramLinkTextClass,
    worksLink, 
    aboutLink, 
    
  } = Astro.props;
---
    <nav role="navigation">
      <ul>
        <li id="worksButton" class={worksButtonClass}><a class={worksLinkTextClass} href={worksLink}>WORKS</a></li>
        <li id="aboutButton" class={aboutButtonClass}><a class={aboutLinkTextClass} href={aboutLink}>ABOUT</a></li>
        <li id="contactButton" class={contactButtonClass}><a class={contactLinkTextClass} href="mailto:hello@jhonboy.com">CONTACT</a></li>
        <li id="instagramButton" class={instagramButtonClass}><a class={instagramLinkTextClass} href="https://www.instagram.com/jhon_boy" target="_blank">INSTAGRAM<span class="arrow">&#8599;</span></a></li>
      </ul>
    </nav>
  