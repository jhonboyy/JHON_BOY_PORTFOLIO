---
import Menu from './Menu.astro';
import { Image } from 'astro:assets';

const { imageSrc, imageAlt, containerClass, imageStyles, headerClass, imageClass, worksButtonClass, aboutButtonClass } = Astro.props;
---

<header class={`menu-opened ${headerClass}`} role="banner">
  <Menu worksButtonClass={worksButtonClass} aboutButtonClass={aboutButtonClass} />
  <div class={`MenuImageContainer ${containerClass}`} style={imageStyles}>
    <Image src={imageSrc} id="menuImage" class={imageClass} alt={imageAlt} loading="eager" />
  </div>
</header>
