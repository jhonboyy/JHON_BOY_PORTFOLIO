---
import Menu from '../components/Menu.astro'
// No se requieren props en este caso, pero se pueden añadir si necesitas pasar datos dinámicos.
---

<header class="menu-opened aboutMenu" id="mainContainer">
    <Menu />
    <div class="MenuImageContainer" style="top: 100px">
        <img src="/images/jhon-boy-illustration-works-page-person-upside-down.svg" id="aboutImage" style="display: block;">
    </div>
</header>

<script type="module">
    import { animateAboutButton, showAboutMenuImage, animateAboutSection } from './src/scripts/pages-animations.js';
    
    document.addEventListener('DOMContentLoaded', () => {
        animateAboutButton();
        showAboutMenuImage();
        animateAboutSection()

    });
    </script>
