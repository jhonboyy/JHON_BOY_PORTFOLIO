---
import Menu from '../components/Menu.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const metaInfo = {
  title: "Welcome to Jhon Boy - Illustrator & Artist",
  description: "Explore the stunning illustrations and artwork of Jhon Boy, a talented illustrator and artist. Discover his portfolio, latest projects, and unique artistic style.",
  keywords: "Jhon Boy, illustrator, artist, artwork, illustrations, portfolio, digital art, creative, unique style",
  canonicalUrl: "https://jhonboy.com/",
  ogImage: "https://jhonboy.com/og-image.jpg",
  twitterImage: "https://jhonboy.com/twitter-image.jpg"
};

---

<script>
  import '@dotlottie/player-component';
</script>
<BaseLayout {...metaInfo} dataPage="index">
  <header class="index" role="banner">
    <h1 id="headerText" class="word">WELCOME TO JHON BOY</h1>
    <div class="lottie-index animate-fade-in-index">
      <dotlottie-player id="mobileAnimation" src="/animations/jhon-boy-animation-index-mobile.lottie" background="white" speed="1" loop autoplay></dotlottie-player>
      <dotlottie-player id="desktopAnimation" src="/animations/jhon-boy-animation-index.lottie" background="white" speed="1" loop autoplay></dotlottie-player>
    </div>
    <Menu 
    worksLinkTextClass="word"
    aboutLinkTextClass="word"
    contactLinkTextClass="word"
    instagramLinkTextClass="word"
    worksLink="/works?from=index"
    aboutLink="/about?from=index"
    />
  </header>
</BaseLayout>
