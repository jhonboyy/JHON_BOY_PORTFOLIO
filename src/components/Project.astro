const { project } = Astro.props;
const { type, className, images, animations, captions } = project;
---
{className === 'project-solo-slider' ? (
  <figure class={`${className} ${type}`}>
    <div class="slide-track">
      {images.map(({ src, alt, width, height }, index) => (
        <div class="slide">
          <Image 
            src={imageMap[src]} 
            alt={alt} 
            width={width} 
            height={height} 
            loading={"eager"} 
          />
        </div>
      ))}
    </div>
    <figcaption>
      <span>{captions.left}</span>
      <span>{captions.right}</span>
    </figcaption>
  </figure>
) : (
  <figure class={`${className} ${type}`}>
    {animations.length > 0 && animations.map((src) => (
      <div style="background-color: white;">
        <dotlottie-player class="player" src={src} background="white"></dotlottie-player>
      </div>
    ))}
    {images.length > 0 && images.map(({ src, alt, width, height }, index) => (
      <div style="background-color: white;">
        <Image 
          src={imageMap[src]} 
          alt={alt} 
          width={width} 
          height={height} 
          loading={index === 0 ? "eager" : "lazy"} 
        />
      </div>
    ))}
    <figcaption>
      <span set:html={captions.left}></span>
      <span>{captions.right}</span>
    </figcaption>
  </figure>
)}
